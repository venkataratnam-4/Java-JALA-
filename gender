import java.util.Scanner;

public class GenderSwitch {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter M for Male or F for Female: ");
        char gender = scanner.next().charAt(0); // Take input as a character

        switch (Character.toUpperCase(gender)) { // Convert input to uppercase for consistency
            case 'M':
                System.out.println("Gender: Male");
                break;
            case 'F':
                System.out.println("Gender: Female");
                break;
            default:
                System.out.println("Invalid input! Please enter M or F.");
        }

        scanner.close();
    }
}
